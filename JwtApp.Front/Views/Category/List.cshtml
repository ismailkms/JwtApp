@model List<CategoryListModel>

@{
    Layout = "_Layout";
}

@{
    if(Model?.Count > 0)
    {
        <table class="table table-bordered mt-4">

            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-center mt-4">
            Herhangi bir kayıt bulunamadı.
        </div>
    }
}
