@model UserLoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Giriş Yap</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <form class="w-75 m-5 p-3 shadow mx-auto" asp-action="Login" asp-controller="Account" method="post">
            <div class="mb-3">
                <label for="@Model.Username" class="form-label">Kullanıcı Adı</label>
                <input asp-for="@Model.Username" class="form-control" />
                <span asp-validation-for="@Model.Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="@Model.Password" class="form-label">Şifre</label>
                <input type="password" asp-for="@Model.Password" class="form-control" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </form>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>